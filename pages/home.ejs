<% layout("../layouts/boilerplate") %>

<!-- Header & Hero Section -->
<div class="Header-Hero-background container-fluid p-0">
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h2>Empowering India's Coal Mines Towards a Carbon-Neutral Future</h2>
            <p>Measure, Manage, and Mitigate your Carbon Footprint with Precision.</p>
            <div class="cta-buttons">
                <a href="#" class="btn primary-btn">Get Started</a>
                <a href="#" class="btn secondary-btn learnbtn">Learn More</a>
            </div>
        </div>
    </section>
</div>

<!-- Key Features Section -->
<section class="features">
    <div class="container">
        <h2>Why Choose MineTrace?</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Comprehensive Emission Tracking</h5>
                        <p class="card-text">Accurately quantify emissions from every aspect of mining operations, from excavation to transportation. Gain a clear understanding of your carbon footprint with data-driven insights tailored to your mine's unique activities.</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Carbon Neutrality Strategies</h5>
                        <p class="card-text">Discover customized pathways to carbon neutrality, including clean technology adoption, afforestation, and carbon credits. Make informed decisions with scenario analysis that aligns with your sustainability goals.</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Interactive Data Visualization</h5>
                        <p class="card-text">Visualize your carbon footprint through dynamic charts and graphs. Monitor progress over time and see the direct impact of implemented changes, all in an easy-to-understand format.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section class="how-it-works">
    <div class="container">
        <h2>How Does It Work?</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Step 1: Data Collection</h5>
                        <p class="card-text">Collect data on your carbon emissions through our comprehensive monitoring tools.</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Step 2: Analysis</h5>
                        <p class="card-text">Analyze the data to identify key areas for improvement and reduction.</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Step 3: Implementation</h5>
                        <p class="card-text">Implement strategies and solutions to reduce your carbon footprint effectively.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Blogs/News/Events Section -->
<section class="blogs-news-events">
    <div class="container">
        <h2>Blogs, News & Events</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <div class="col">
                <div class="card h-100">
                    <img src="image1.jpg" class="card-img-top" alt="Blog Image 1">
                    <div class="card-body">
                        <h5 class="card-title">Innovations in Carbon Offset Technologies</h5>
                        <p class="card-text">Explore the latest advancements in carbon offset technologies for coal mining operations.</p>
                        <a href="https://www.carbonclick.com/news-views/innovative-technologies-in-carbon-offsetting" class="btn text-decoration-underline">Read More</a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <img src="image2.jpg" class="card-img-top" alt="News Image 1">
                    <div class="card-body">
                        <h5 class="card-title">New Regulations for Carbon Emissions in Mining</h5>
                        <p class="card-text">Stay updated with the new regulations impacting carbon emissions in the mining sector.</p>
                        <a href="https://coal.gov.in/en/sustainable-development-cell/promoting-renewable" class="btn text-decoration-underline">Read More</a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <img src="image3.jpg" class="card-img-top" alt="Event Image 1">
                    <div class="card-body">
                        <h5 class="card-title">Upcoming Conference on Sustainable Mining</h5>
                        <p class="card-text">Join us for an insightful conference on sustainable practices and carbon offsetting in mining.</p>
                        <a href="https://www.fedmin.com/indexmain/events/14#:~:text=In%20this%20background%2C%20FIMI%20is,for%20sustainable%20mining%20in%20India." class="btn text-decoration-underline">Read More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- FAQ Section -->
<section class="faq-section">
    <div class="container">
        <h2>Frequently Asked Questions</h2>
        <div class="faq-item">
            <div class="faq-question">What is MineTrace?</div>
            <div class="faq-answer">MineTrace is a platform designed to help coal mines measure, manage, and mitigate their carbon footprint through precise data collection, analysis, and reporting.</div>
        </div>
        <div class="faq-item">
            <div class="faq-question">How does the carbon footprint calculator work?</div>
            <div class="faq-answer">The calculator estimates emissions based on various input data like quantity of coal, energy usage, transportation and other operational metrics. It provides actionable insights for reduction strategies.</div>
        </div>
        <div class="faq-item">
            <div class="faq-question">Is MineTrace suitable for small mining operations?</div>
            <div class="faq-answer">Yes, MineTrace is designed to scale from small to large mining operations, providing customized solutions to meet specific needs.</div>
        </div>
        <div class="faq-item">
            <div class="faq-question">Can I save the save the data for later?</div>
            <div class="faq-answer">Absolutely, you can save your data for later use. MineTrace allows users to securely store their input data and analysis results, making it easy to view it at any time.</div>
        </div>
    </div>
</section>

<style>
body {
    font-family: 'Baloo Bhai', sans-serif;
    margin: 0;
    padding: 0;
    line-height: 1.6;
    color: #333;
}

.Header-Hero-background {
    background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url("./bgpic.jpg");
    background-repeat: no-repeat;
    background-size: cover;
    height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
}

.hero {
    text-align: center;
    color: #fff;
}

.hero h2 {
    font-size: 3rem;
    margin-bottom: 20px;
}

.hero p {
    font-size: 1.2rem;
    margin-bottom: 30px;
}

.cta-buttons a {
    text-decoration: none;
    padding: 12px 24px;
    margin: 10px;
    border-radius: 5px;
    font-weight: bold;
}

.primary-btn {
    background: #f39c12;
    color: #fff;
}

.secondary-btn {
    background: #fff;
    color: #333;
}

.primary-btn:hover,
.secondary-btn:hover {
    opacity: 0.8;
}

.features {
    padding: 50px 0;
    background: #f4f4f4;
}

.features h2 {
    text-align: center;
    margin-bottom: 40px;
}

.card {
    background-color: #f39c12;
    border: 1px solid #ddd;
    border-radius: 10px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
    transform: scale(1.02);
    box-shadow: 0 4px 10px rgba(0,0,0,0.2);
}

.card-title {
    font-weight: bold;
    text-align: center;
    font-size: 1.4rem;
    margin-bottom: 20px;
}

.card-text {
    text-align: center;
    font-size: 1rem;
    color: #333;
}

.how-it-works {
    padding: 50px 0;
    background: #fff;
}

.how-it-works h2 {
    text-align: center;
    margin-bottom: 40px;
}

.how-it-works .card {
    border: 1px solid #ddd;
    border-radius: 10px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.how-it-works .card:hover {
    transform: scale(1.02);
    box-shadow: 0 4px 10px rgba(0,0,0,0.2);
}

.blogs-news-events {
    padding: 50px 0;
    background: #f4f4f4;
}

.blogs-news-events h2 {
    text-align: center;
    margin-bottom: 40px;
}

.blogs-news-events .card {
    border: none;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.blogs-news-events .card:hover {
    transform: scale(1.02);
    box-shadow: 0 4px 10px rgba(0,0,0,0.2);
}

.blogs-news-events .card img {
    height: 200px;
    object-fit: cover;
}

.blogs-news-events .card-title {
    font-weight: bold;
    font-size: 1.4rem;
    margin-bottom: 15px;
}

.blogs-news-events .card-text {
    font-size: 1rem;
    color: #333;
}

.faq-section {
    padding: 50px 0;
    background: #fff;
}

.faq-section h2 {
    text-align: center;
    margin-bottom: 40px;
}

.faq-item {
    background-color: #f4f4f4;
    padding: 15px;
    margin-bottom: 10px;
    border-radius: 5px;
    cursor: pointer;
    border: 1px solid #ddd;
}

.faq-question {
    font-weight: bold;
    margin-bottom: 5px;
}

.faq-answer {
    display: none;
    margin-top: 10px;
}
</style>

<script>
document.querySelectorAll('.faq-item').forEach(item => {
    item.addEventListener('click', () => {
        const answer = item.querySelector('.faq-answer');
        answer.style.display = answer.style.display === 'none' ? 'block' : 'none';
    });
});
</script>