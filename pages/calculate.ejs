                <div class="row mb-2 align-items-center">
                  <label for="subbitu" class="col-2 text-end">Sub-bituminous:</label>
                  <div class="col-6">
                    <input type="number" class="form-control shadow-sm" id="subbitu" name="Mine[]">
                  </div>
                  <div class="col-1 p-0">kg.</div>
                </div>
