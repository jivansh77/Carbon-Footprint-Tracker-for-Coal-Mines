<% layout("../layouts/boilerplate") %>

<div class="row mt-5">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="ratio ratio-16x9">
                <img src="<%= mines.image %>" class="card-img-top" alt="Not found">
            </div>
            <div class="card-body">
                <h5 class="card-title"><%= mines.name%></h5>
                <p class="card-text">
        
                desc
                 
                
                </p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <%  if(mines.state === "---Select Your State---") {%>
                        Not Assigned,
                    <% } else { %>
                        <%= mines.state %>,
                    <% } %>
    
                    <%  if(mines.district === "---Select Your District---") {%>
                        Not Assigned,
                    <% } else { %>
                        <%= mines.district %>
                    <% } %>
                </li>
            </ul>
            <div class="card-body align-items-center">
                <a href="/index/<%= mines._id%>/edit" class="card-link"><button class="btn btn-success">Edit</button></a>
                
                    <form action="/index/<%= mines._id%>?_method=DELETE" method="post" class="d-inline">
                        <a href="" class="card-link"> <button class="btn btn-danger">Delete</button></a>
                    </form>
                
                <a href="/index" class="card-link">Back</a>
            </div>
        </div>
    </div>
</div>