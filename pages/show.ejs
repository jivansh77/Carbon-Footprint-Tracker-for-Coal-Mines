    svg{
        margin-bottom: 5px;
    }
    .indicator{
      width: 100%;
    }
    .rect{
      width: auto;
    }
    .information, .loc{
      height: 100%;
    }
    .footPrintBox{
      height: 100%;
    }
    input{      
      color: rgb(0, 148, 0);
      text-align: center;
      padding: 0;
    }
    .totalbox input{
      width: 100%;
    }
    .list-group-item{
      font-weight: bold;
    }

    .mineinfo{
      font-size: 2.2rem;
      color: orange;
      -webkit-text-stroke: 0.7px black;
      font-weight: bold;
    }

    .goback{
      position: fixed;
    }
</style>
